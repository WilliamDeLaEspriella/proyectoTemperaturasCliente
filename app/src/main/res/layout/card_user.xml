<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view_item_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_margin_horizontal"
    android:layout_marginRight="@dimen/card_margin_horizontal"
    android:layout_marginTop="@dimen/card_margin_vertical"
    android:background="#FFFF"
    android:transitionName="shareView"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
    card_view:cardElevation="@dimen/card_recycler_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/text_margin">

        <RelativeLayout
            android:id="@+id/rela_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:backgroundTint="#CCCCCC"
            android:layout_alignParentRight="true">

            <TextView android:textColor="@android:color/black"
                android:id="@+id/datoU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="30°"
                android:textSize="15sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/nombreU"
            android:layout_width="60dp"
            android:lines="1"
            android:layout_height="wrap_content"
            android:text="William Andres"
            android:textColor="#000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/apellidoU"
            android:layout_width="70dp"
            android:lines="1"
            android:layout_height="wrap_content"
            android:layout_below="@id/nombreU"
            android:layout_marginTop="@dimen/text_margin_very_small"
            android:text="De la Espriella Avila"
            android:textSize="10sp" />


        <!--TextView
            android:id="@+id/edadU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/apellidoU"

            android:layout_marginTop="@dimen/text_margin_very_small"
            android:layout_toEndOf="@id/rela_round"
            android:layout_toRightOf="@id/rela_round"
            android:text="26 C"
            android:textSize="13sp" /-->

        <View
            android:id="@+id/viewe"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/apellidoU"
            android:layout_marginTop="5dp"
            android:background="@color/colorAccent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/viewe">


            <TextView
                android:id="@+id/deviceU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/text_margin_very_small"
                android:text="conectado a: device5882"
                android:textSize="8sp" />
        </RelativeLayout>


    </RelativeLayout>
